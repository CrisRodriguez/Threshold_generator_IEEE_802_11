<?xml version="1.0"?>

<block>
	<name>WiFi Threshold Generator</name>
	<key>ieee802_11_threshold_generator</key>
	<category>[IEEE802.11]</category>
	<import>import ieee802_11</import>
	<make>ieee802_11.threshold_generator($threshold,$debug,$Rxgain)</make>
	<callback>set_Rxgain($Rxgain)</callback>
	<param>
		<name>Threshold</name>
		<key>threshold</key>
		<value>0.7</value>
		<type>real</type>
	</param>

	<param>
		<name>Debug</name>
		<key>debug</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>

	<param>
	    <name>Rxgain</name>
	    <key>Rxgain</key>
	    <type>float</type>
  	</param>

	<sink>
		<name>SNR in</name>
		<type>message</type>
		<optional>1</optional>
	</sink>

	<sink>
		<name>FER in</name>
		<type>message</type>
		<optional>1</optional>
	</sink>

	<sink>
		<name>Power in</name>
		<type>float</type>
		<optional>1</optional>
	</sink>

	<source>
		<name>threshold out</name>
		<type>message</type>
		<optional>1</optional>
	</source>

